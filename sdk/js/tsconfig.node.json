{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "./dist/node",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/node",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@virtonetwork/sdk/descriptors": [
        ".papi/descriptors/dist/index.d.ts"
      ]
    }
  },
  "include": [
    "src/index.node.ts",
    "src/**/*",
    "global.d.ts"
  ]
}

