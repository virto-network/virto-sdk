{
  "name": "@virtonetwork/sdk",
  "version": "0.0.4-alpha.17",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "postinstall": "papi",
    "build": "npm run build:esm && npm run build:cjs && npm run build:umd",
    "build:esm": "vite build --config vite.config.esm.mts",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:umd": "vite build --config vite.config.mts",
    "test": "npm run build && jest --config=jest.config.js",
    "test:watch": "npm run build && jest --config=jest.config.js --watch"
  },
  "exports": {
    "require": "./dist/cjs/sdk.js",
    "import": "./dist/esm/sdk.js",
    "default": "./dist/umd/sdk.umd.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.12.0",
    "jest": "^29.7.0",
    "jest-environment-puppeteer": "^11.0.0",
    "jest-puppeteer": "^11.0.0",
    "puppeteer": "^24.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-wasm": "^3.4.1"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-api/substrate-bindings": "^0.16.3",
    "@polkadot-labs/hdkd-helpers": "^0.0.19",
    "@virtonetwork/authenticators-webauthn": "^1.1.3",
    "@virtonetwork/signer": "^1.1.0",
    "es-arraybuffer-base64": "^1.1.2",
    "jsonwebtoken": "^9.0.2",
    "nid-webauthn-emulator": "^0.2.4",
    "polkadot-api": "^1.17.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
